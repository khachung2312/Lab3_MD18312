<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bai3_ContraintLayout">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.57" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineHorizontal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.16" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineVertical2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineVertical3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <TextView
        android:id="@+id/txt1"
        android:background="#FF9406"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/lineVertical"
        app:layout_constraintTop_toTopOf="@id/lineHorizontal2"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#FFEF06"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/lineVertical2"
        app:layout_constraintTop_toTopOf="@id/lineHorizontal2"/>

    <TextView
        android:id="@+id/txt5"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:background="#FF067B"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/lineHorizontal"
        app:layout_constraintStart_toEndOf="@id/lineVertical3"
        />

    <TextView
        android:id="@+id/txt3"
        android:background="#06FF27"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/lineVertical"
        app:layout_constraintTop_toTopOf="@id/lineHorizontal"/>

    <TextView
        android:id="@+id/txt4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#0661FF"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/lineVertical2"
        app:layout_constraintTop_toTopOf="@id/lineHorizontal"/>


</androidx.constraintlayout.widget.ConstraintLayout>